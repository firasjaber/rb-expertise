// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm-openssl-1.1.x"]
}

model User {
  id       Int    @id @default(autoincrement())
  username String
}

model Employee {
  id           Int           @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String        @unique
  pictureUrl   String?       @default("https://imgproxy.generated.photos/qZKLWxkKQ-IwCzW5AYoDKbjn9GUT6aGuJ-b918HaEJE/rs:fit:256:256/czM6Ly9pY29uczgu/Z3Bob3Rvcy1wcm9k/LnBob3Rvcy90cmFu/c3BhcmVudF92My92/M18wNDk4NDQ4LnBu/Zw.png")
  isAdmin      Boolean
  phone        String
  birthDate    DateTime
  address      String
  city         String
  region       String
  startDate    DateTime
  endDate      DateTime?
  createdAt    DateTime      @default(now())
  appointments Appointment[]
}

model Assurance {
  id          Int           @id @default(autoincrement())
  slug        String
  name        String
  pictureUrl  String
  appoitments Appointment[]
}

model Appointment {
  id          Int       @id @default(autoincrement())
  title       String
  location    String
  date        DateTime
  notes       String?   @default("")
  createdAt   DateTime  @default(now())
  employee    Employee  @relation(fields: [employeeId], references: [id])
  employeeId  Int
  assurance   Assurance @relation(fields: [assuranceId], references: [id])
  assuranceId Int
}
